{
    <br />
    <br />

    @foreach (var driver in driver_data.response)
    {
        var mostRecentTeam = driver.teams.OrderByDescending(t => t.season).FirstOrDefault();

        <br />
        <br />
        <div class="container my-5">
            <div class="card mb-3" style="width: 100%;">
                <div class="row g-0">
                    <div class="col-md-4" style="width: fit-content">
                        <img src="@driver.image" class="img-fluid rounded-start" alt="..." height="200px !important;" width="200px;">
                    </div>
                    <div class="col-md-10 p-2">
                        <div class="row">
                            <div class="col-md-6" style="height: 50%">
                                <center>
                                    <h3 class="card-title"><b>Podiums</b></h3>
                                    <h5>@driver.podiums</h5>
                                </center>

                            </div>
                            <div class="col-md-6 p-2" style="height: 50%">
                                <center>
                                    <h3 class="card-title"><b>Career Points</b></h3>
                                    <h5>@driver.career_points</h5>
                                </center>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6" style="height: 50%">
                                <center>
                                    <h3 class="card-title"><b>Podiums</b></h3>
                                    <h5>@driver.podiums</h5>
                                </center>

                            </div>
                            <div class="col-md-6 p-2" style="height: 50%">
                                <center>
                                    <h3 class="card-title"><b>Career Points</b></h3>
                                    <h5>@driver.career_points</h5>
                                </center>
                            </div>
                        </div>
                    </div>

                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">@driver.name // @(mostRecentTeam?.team?.name ?? "N/A")</li>
                </ul>
            </div>
        </div>


        <div class="container mt-5" style="border:solid 2px; border-radius: 25px;">
            <div class="row">
                <div class="col-md-4 p-2">
                        <h3><b>@driver.name</b></h3>
                        <h4>@(mostRecentTeam?.team?.name ?? "N/A")</h4>
                        <img src="@driver.image" style="width: 50%;">
                </div>
                <div class="col-md-8 p-2">
                    <div class="row">
                        <div class="col-md-6" style="height: 150px">
                            <center>
                                <h3 class="card-title"><b>Podiums</b></h3>
                                <h5>@driver.podiums</h5>
                            </center>

                        </div>
                        <div class="col-md-6 p-2" style="height: 150px">
                            <center>
                            <h3 class="card-title"><b>Career Points</b></h3>
                            <h5>@driver.career_points</h5>
                            </center>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <center>
                            <h3 class="card-title"><b>World Championships</b></h3>
                            <h5>@driver.world_championships</h5>
                            </center>
                        </div>
                        <div class="col-md-6">
                            <center>
                            <h3 class="card-title"><b>Grand Prix Raced</b></h3>
                            <h5>@driver.grands_prix_entered</h5>
                            </center>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <br />
    }
}
else if (error != null)
{
    <p style="color: red;">Error: @error</p>
}

@code {
    private string searchParameter;
    private DriverDetailRoot driver_data;
    private string searchResult;
    private string error;
    private bool isLoading;

    private async Task Search()
    {
        isLoading = true;

        try
        {
            using (var client = new HttpClient())
            {
                var request = new HttpRequestMessage
                    {
                        Method = HttpMethod.Get,
                        RequestUri = new Uri($"https://api-formula-1.p.rapidapi.com/drivers?search={searchParameter}"),
                        Headers =
                {
                        { "X-RapidAPI-Key", "5f3853b99amsh601f7aab225fb6ep1a2569jsndd2d15834371" },
                        { "X-RapidAPI-Host", "api-formula-1.p.rapidapi.com" },
                    },
                    };

                using (var response = await client.SendAsync(request))
                {
                    response.EnsureSuccessStatusCode();
                    var responseBody = await response.Content.ReadAsStringAsync();
                    Console.WriteLine(responseBody);
                    driver_data = JsonConvert.DeserializeObject<DriverDetailRoot>(responseBody);
                    StateHasChanged(); // Trigger a re-render of the component

                }
            }
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }
}